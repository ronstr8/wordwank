#!/usr/bin/env perl
use strict;
use warnings;
use utf8;
use File::Basename 'dirname';
use File::Spec::Functions qw(catdir splitdir);

# Support "lib" directory
my $lib = catdir(dirname(__FILE__), '..', 'lib');
push @INC, $lib;

# Start Mojolicious application
require Mojolicious::Commands;
Mojolicious::Commands->start_app('Wordwank');
